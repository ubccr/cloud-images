{
  "variables": {
    "coreos_channel": "stable",
    "install_target": "/dev/vda",
    "provision_passwd": ""
  },
  "builders":
  [
    {
      "name": "coreos",
      "type": "qemu",
      "format": "raw",
      "iso_url": "https://{{user `coreos_channel`}}.release.core-os.net/amd64-usr/current/coreos_production_iso_image.iso",
      "iso_checksum_url": "https://{{user `coreos_channel`}}.release.core-os.net/amd64-usr/current/coreos_production_iso_image.iso.DIGESTS",
      "iso_checksum_type": "md5",
      "ssh_username": "core",
      "ssh_password": "{{user `provision_passwd`}}",
      "disk_size": "10000",
      "http_directory": ".",
      "http_port_min" : 9006,
      "http_port_max" : 9006,
      "shutdown_command": "sudo -S shutdown -P now",
      "vm_name": "CHANGE_NAME",
      "output_directory": "CHANGE_NAME",
      "disk_interface": "virtio",
      "ssh_wait_timeout": "40m",
      "qemu_binary": "/usr/libexec/qemu-kvm",
      "headless": "true",
      "accelerator": "kvm",
      "boot_wait": "30s",
      "ssh_port": 22,
      "qemuargs": [[ "-m", "1024m" ],
               ["-machine", "type=pc,accel=kvm"],
               ["-device", "virtio-net-pci,netdev=user.0"]],
      "boot_command":
      [
        "sudo -i<enter>",
        "systemctl stop sshd.socket<enter>",
        "wget http://{{ .HTTPIP }}:{{ .HTTPPort }}/deploy/config.yml<enter>",
        "coreos-install -d {{user `install_target`}} -C {{user `coreos_channel`}} -c config.yml<enter>",
        "reboot<enter>"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "deploy",
      "destination": "/tmp"
    },
    {
      "type": "shell",
      "environment_vars" : [],
      "scripts": [
        "post_install.sh"
      ]
    }
  ]
}
