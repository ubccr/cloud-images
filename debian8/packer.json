{
  "builders": [
  {
  "type": "qemu",
  "format": "raw",
  "iso_url": "http://mirrors.cbls.ccr.buffalo.edu/full-mirror/isos/debian-8.5.0-amd64-netinst.iso",
  "iso_checksum": "3e1b9029a0cf188730646c379d15073f",
  "iso_checksum_type": "md5",
  "ssh_username": "root",
  "ssh_password": "password",
  "ssh_wait_timeout": "3000000s",
  "disk_size": "10000",
  "http_directory" : ".",
  "http_port_min" : 9001,
  "http_port_max" : 9001,
  "shutdown_command": "shutdown -h now",
  "vm_name": "CHANGE_NAME",
  "output_directory": "CHANGE_NAME",
  "disk_interface": "virtio",
  "qemu_binary": "/usr/libexec/qemu-kvm",
  "headless": true,
  "accelerator": "kvm",
  "qemuargs": [["-machine", "type=pc,accel=kvm"],
               ["-device", "virtio-net-pci,netdev=user.0"]],
  "boot_command" : [
            "<esc><wait>",
            "install <wait>",
            "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/preseed.cfg ",
            "debian-installer=en_US <wait>",
            "auto <wait>",
	    "locale=en_US <wait>",
            "kbd-chooser/method=us <wait>",
            "fb=false <wait>",
            "debconf/frontend=noninteractive <wait>",
            "netcfg/get_hostname=localhost netcfg/get_domain=localdomain",
            "console-setup/ask_detect=false <wait>",
            "console-keymaps-at/keymap=us <wait>",
            "keyboard-configuration/xkb-keymap=us <wait>",
            "<enter><wait>"
        ]
  }
  ],
  "provisioners": [
{
      "type": "file",
      "source": "deploy",
      "destination": "/tmp"
    },
  {
    "type": "shell",
    "script": "post_install.sh"
  }]
}
